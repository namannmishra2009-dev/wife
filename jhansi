<script>
/* ========== STATE ========== */
let currentPage = 0;
let musicStarted = false;

/* ========== NAME CHECK ========== */
function checkName() {
  const val = document.getElementById("nameInput").value
    .toLowerCase()
    .trim()
    .replace(/\s+/g," ");
  if (val === "jhansi rani mishra") {
    showPage(1);
    startMusic();
  } else {
    document.getElementById("nameMsg").innerText = "That‚Äôs not it ‚ù§Ô∏è";
  }
}

/* ========== PAGE CONTROL ========== */
function showPage(index) {
  document.querySelectorAll(".section").forEach(s => s.classList.remove("active"));
  document.getElementById("page" + index).classList.add("active");
  currentPage = index;
  checkDateLock();
}

function nextPage() {
  showPage(currentPage + 1);
}

/* ========== DATE LOCK (IST) ========== */
function checkDateLock() {
  const section = document.getElementById("page" + currentPage);
  const dateStr = section.dataset.date;
  if (!dateStr) return;

  const now = new Date().toLocaleString("en-US", { timeZone: "Asia/Kolkata" });
  const today = new Date(now);
  const unlock = new Date(dateStr + "T00:00:00");

  const msg = section.querySelector(".lock-msg");
  const btn = section.querySelector("button");

  if (today < unlock) {
    msg.innerText = "Not today ‚ù§Ô∏è Come back on " + unlock.toDateString();
    if (btn) btn.disabled = true;
  } else {
    msg.innerText = "";
    if (btn) btn.disabled = false;
  }
}

/* ========== MUSIC ========== */
function startMusic() {
  if (musicStarted) return;
  const music = document.getElementById("bgMusic");
  music.play().catch(()=>{});
  musicStarted = true;
  document.getElementById("musicToggle").style.display = "block";
}

document.getElementById("musicToggle").onclick = () => {
  const m = document.getElementById("bgMusic");
  if (m.paused) m.play();
  else m.pause();
};

/* ========== HEARTS ON CLICK ========== */
document.addEventListener("click", e => {
  const heart = document.createElement("div");
  heart.className = "heart";
  heart.innerText = "‚ù§Ô∏è";
  heart.style.left = e.clientX + "px";
  heart.style.top = e.clientY + "px";
  document.body.appendChild(heart);
  setTimeout(() => heart.remove(), 2500);
});
</script>

